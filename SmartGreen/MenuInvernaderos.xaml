<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGreen.MenuInvernaderos"
             NavigationPage.HasNavigationBar="False"
             Title="Invernaderos">
    
        <FlyoutPage.Flyout>
            <ContentPage Title="Menú">
                <ScrollView>
                    <StackLayout Padding="0">

                        <Grid BackgroundColor="#DDE8D7" Padding="30">
                            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *">
                                <Image Source="perfil.png" HeightRequest="50" WidthRequest="50" HorizontalOptions="Start" />
                                <VerticalStackLayout Padding="60,0,0,0">
                                    <Label Text="Usuario" FontSize="18" FontAttributes="Bold"  />
                                    <Label Text="contact@example.com" FontSize="14" />
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>

                        <VerticalStackLayout Padding="15,5">
                            
                            <Button Text="Inicio" BackgroundColor="Transparent"  TextColor="Black" HorizontalOptions="Center"/>
                            <Button Text="Invernaderos"  BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Center"/>
                            <Button Text="Registrar invernadero"  BackgroundColor="Transparent" TextColor="Black"/>
                            <Button Text="Notificaciones"  BackgroundColor="Transparent" TextColor="Black"/>
                            <Button Text="Estadísticas"  BackgroundColor="Transparent" TextColor="Black"/>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="3" BackgroundColor="Gray" Opacity="0.5" Margin="10,140,0,0"/>

                        <VerticalStackLayout Padding="15,5">
                            <Button Text="Cuenta" BackgroundColor="Transparent" TextColor="Black"/>
                            <Button Text="Salir" BackgroundColor="Transparent" TextColor="Black"/>
                        </VerticalStackLayout>

                    </StackLayout>
                </ScrollView>
            </ContentPage>
        </FlyoutPage.Flyout>




    <FlyoutPage.Detail>
        <ContentPage Title="Invernaderos">
            <Grid>
                <!-- Capa de fondo, overlay y logo -->
                <Grid>
                    <Image Source="fondo.jpg"
                       Scale="1.4"
                       Opacity="0.8"
                       Aspect="AspectFill"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="FillAndExpand"/>

                    <RoundRectangle Margin="15,10,15,0"
                                CornerRadius="30"
                                Fill="White"
                                Opacity="0.4"
                                VerticalOptions="Start"
                                HeightRequest="230"/>

                    <Image Source="logooff.png"
                       HeightRequest="180"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       Margin="0,30,0,0"/>
                </Grid>

                <!-- Contenido: botones de viveros -->
                <ScrollView>
                    <VerticalStackLayout Padding="10" Spacing="20" Margin="0,260,0,0">
                        <Button BackgroundColor="White"
                            Text="Vivero 1"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            HeightRequest="60"
                            WidthRequest="400"
                            CornerRadius="30"
                            FontSize="Body"
                            FontAttributes="Bold"/>
                        <Button BackgroundColor="White"
                            Text="Vivero 2"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            HeightRequest="60"
                            WidthRequest="400"
                            CornerRadius="30"
                            FontSize="Body"
                            FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Botón flotante para registrar (convertido de Frame a Button) -->
                <Button BackgroundColor="White"
                    CornerRadius="20"
                    Padding="5"
                    WidthRequest="50"
                    HeightRequest="50"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="20"
                    ImageSource="mas.png"
                    TextColor="Black"
            </Grid>
        </ContentPage>
    </FlyoutPage.Detail>





</FlyoutPage>