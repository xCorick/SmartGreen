<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGreen.FlyoutInicio"
             NavigationPage.HasNavigationBar="False"
             Title="Inicio"
             >


    <FlyoutPage.Flyout>
        <ContentPage Title="Menú">
            <ScrollView>
                <StackLayout Padding="0">

                    <Grid BackgroundColor="#DDE8D7" Padding="30">
                        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="Auto, *">
                            <Image Source="perfil.png" HeightRequest="50" WidthRequest="50" HorizontalOptions="Start" />
                            <VerticalStackLayout Padding="60,0,0,0">
                                <Label Text="Usuario" FontSize="18" FontAttributes="Bold"  />
                                <Label Text="contact@example.com" FontSize="14" />
                            </VerticalStackLayout>
                        </Grid>
                    </Grid>

                    <VerticalStackLayout Padding="15,5">
                        <Button Text="Inicio" BackgroundColor="Transparent"  TextColor="Black" HorizontalOptions="Center"/>
                        <Button Text="Invernaderos"  BackgroundColor="Transparent" TextColor="Black" HorizontalOptions="Center"/>
                        <Button Text="Registrar invernadero"  BackgroundColor="Transparent" TextColor="Black"/>
                        <Button Text="Notificaciones"  BackgroundColor="Transparent" TextColor="Black"/>
                        <Button Text="Estadísticas"  BackgroundColor="Transparent" TextColor="Black"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="3" BackgroundColor="Gray" Opacity="0.5" Margin="10,140,0,0"/>

                    <VerticalStackLayout Padding="15,5">
                        <Button Text="Cuenta" BackgroundColor="Transparent" TextColor="Black"/>
                        <Button Text="Salir" BackgroundColor="Transparent" TextColor="Black"/>
                    </VerticalStackLayout>

                </StackLayout>
            </ScrollView>
        </ContentPage>
    </FlyoutPage.Flyout>




    <FlyoutPage.Detail>
        <ContentPage Title="Detalles">
            <VerticalStackLayout>
                <Grid RowDefinitions=".3*,.7*" >
                    <VerticalStackLayout>
                        <Image Source="fondo.jpg" Scale="1.4" Opacity=".8" Aspect="AspectFill" HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"/>
                    </VerticalStackLayout>

                    <Grid Grid.Row="1">
                        <RoundRectangle Margin="15,-160,15,-380"
             CornerRadius="30,30,30,30"
             Fill="White" Opacity=".4"/>
                        <Image Source="logooff.png" HeightRequest="180" Margin="0,-300,0,0"/>
                    </Grid>

                    <Grid Grid.Row="1" RowDefinitions="Auto, Auto" Margin="30,40,0,0">
                        <StackLayout Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center" Margin="0, 0, 0, 10">
                            <ImageButton x:Name="view" Source="view.png" HeightRequest="150" WidthRequest="150"
                          CornerRadius="10" 
                          HorizontalOptions="Center" VerticalOptions="Center"/>
                        </StackLayout>

                        <StackLayout Grid.Row="1" HorizontalOptions="End" VerticalOptions="Center" Margin="0, -170, 30, 0">
                            <ImageButton x:Name="add" Source="btnadd.jpg" HeightRequest="150" WidthRequest="150" 
                          CornerRadius="10" 
                          HorizontalOptions="Center" VerticalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </Grid>
            </VerticalStackLayout>

        </ContentPage>
    </FlyoutPage.Detail>


</FlyoutPage>